@page "/"
@model dots_server_v2.Pages.Home.IndexPageModel

@{
    Layout = "Shared/_Layout";
}


<header class="bg-gradient" id="home">
    <div class="container mt-5">
        <h1>...Dots</h1>
        <p class="tagline">Package Manager for .Dotfiles <br>Easiest way to distribute your desktop rice <br> </p>
    </div>
    <div class="img-holder mt-3"><img src="~/images/dots-ss2.png" alt="phone" class="img-fluid"></div>
</header>

